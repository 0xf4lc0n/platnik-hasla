<Window x:Class="PlatnikHasla.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlatnikHasla"
        mc:Ignorable="d"
        Title="Płatnik Hasła" Height="300" Width="400" ResizeMode="CanMinimize">
	<Grid>
		<Button Content="Znajdź hasło" HorizontalAlignment="Left" Margin="134,200,0,0" VerticalAlignment="Top" Width="119" Height="34" Name="FindPasswordButton" Click="FindPasswordClick"/>
		<TextBox HorizontalAlignment="Left" Height="47" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" Name="UserPassword" FontSize="24" IsReadOnly="True"/>
		<TextBox HorizontalAlignment="Left" Height="47" Margin="10,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" x:Name="DatabasePassword" FontSize="24" IsReadOnly="True"/>
		<Label Content="Hasło użytkownika" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" VerticalAlignment="Top" Width="205"/>
		<Label Content="Hasło do bazy" HorizontalAlignment="Left" Height="31" Margin="10,97,0,0" VerticalAlignment="Top" Width="205"/>

	</Grid>
</Window>
